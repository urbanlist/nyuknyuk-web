$timelineBarWidth = 800px
$timelineBarInnerWidth = calc(800px - 100px)
$height = 30px

.timeline-control
  position relative
  margin 0 auto
  height 30px
  color white
  z-index 10
  width 100%
  display flex
  .margin
    width 20px
  .left
    z-index 10
    height $height
    width $height
    border none
    padding 0
    @media (min-width 1000px)
      opacity 0
  .right
    z-index 10
    height $height
    width $height
    border none
    padding 0
    @media (min-width 1000px)
      opacity 0
  .timeline-bar-control
    flex 1
    margin 0 auto
    width 75%
    height $height
    position relative
    overflow hidden
    .timeline-bar
      height $height
      transition transform .3s linear
      display flex
      width $timelineBarWidth
      margin 0 auto
      .start-text
        margin-right 10px
        p
          font-family 'Lato', sans-serif
          font-size 1rem
          font-weight 700
          text-align right
      .start-bar
        position relative
        border-left 4px solid white
        top 5px
        height 20px
      .middle-bar
        position relative
        width $timelineBarInnerWidth
        flex none
        .bar
          width $timelineBarInnerWidth
          position absolute
          top 14px
          border-top 2px solid white
        .time-point-button
          position absolute
          height $height
          width $height
          border none
          background none
          padding 0
          .time-point
            background white
            border solid 2px rgb(30,150,250)
            border-radius 12px
            top 4px
            width 20px
            height 20px
      .end-bar
        position relative
        border-left 4px solid white
        top 5px
        height 20px
      .end-text
        margin-left 10px
        padding-top 5px
        p
          font-family 'Lato', sans-serif
          font-size 1rem
          font-weight 700
          text-align right