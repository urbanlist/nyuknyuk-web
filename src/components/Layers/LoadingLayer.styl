@keyframes loading-layer-ani
  0%
    opacity 1
  75%
    opacity 1
  100%
    opacity 0

.loading-layer
  top 0px
  left 0px
  position fixed
  width 100%
  height 100%
  background-color white
  z-index 100
  animation loading-layer-ani 3.5s forwards
  @keyframes bar-left-ani
    0%
      transform translateX(-10vw)
    70%
      transform translateX(10vw)
    100%
      transform translateX(10vw)
  @keyframes bar-right-ani
    0%
      transform translateX(-10vw)
    30%
      transform translateX(-10vw)
    100%
      transform translateX(10vw)
  @keyframes loading-layer-title-ani
    0%
      transform scaleY(0)
      opacity 0
    30%
      transform scaleY(1)
      opacity 1

  .loading-center
    display flex
    align-items center
    justify-content center
    height 100%
    width 100%
    .title
      animation loading-layer-title-ani 2s forwards
    & > div
      color #8282a0
      display inline-block
      font-size 2rem
      font-weight 900
    .loading-left
      transform translateX(-36px)
      width 10vw
    .loading-right
      transform translateX(36px)
      width 10vw
    .loading-bar
      overflow hidden
      .bar
        border-top 1px solid #8282a0
        width 10vw
      .bar-left
        animation bar-left-ani 2s forwards
      .bar-right
        animation bar-right-ani 2s forwards
  .loading-footer
    width 100%
    position absolute
    bottom 20px
    text-align center
    span
      color #8282a0
      font-family 'Lato', sans-serif
      font-weight 100
      font-size 1rem