.rain-layer
  position fixed
  width 200%
  height 150%
  transform translate(-25%, -25%)
  @keyframes rain-keyframe
    from
      transform translate(-50%, -115px)
    to
      transform translate(-50%, 0px)
  @keyframes snow-keyframe
    from
      transform translate(-50%, -115px)
    to
      transform translate(-50%, 0px)
  // display flex
  svg
    overflow hidden
  .rain-element
    // float left
    display inline-block
    width 80px
    height 100%
