.home
  position fixed
  width 100vw
  height 100vh
  overflow hidden
  @keyframes show-ani
    0%
      opacity 0
      transform translateY(10px)
    100%
      opacity 1
      transform translateY(0px)
  @keyframes clarity-animation
    0%
      opacity 1
    50%
      opacity 0.5
    100%
      opacity 1
  .clarity
    position fixed
    width 100%
    height 100%
    background-image radial-gradient(circle at top left, #fff -26%, transparent 43%)
    animation clarity-animation 2s 1s infinite linear
    // opacity .1 
  .top
    position fixed
    width 100%
    height 100px
    .weather
      z-index 10
      position absolute
      top 20px
      left 45px
      font-family 'Lato', sans-serif
      font-size 1rem
      font-weight 700
    .weather-img
      width 18px
      height 18px
      position absolute
      top 19px
      left 20px
    .place
      z-index 10
      position absolute
      top 20px
      right 20px
      font-family 'Lato', sans-serif
      font-size 1rem
      font-weight 700
    .logo
      position absolute
      width 100%
      top 21px
      z-index 100
      svg
        width 100%
        height 14px
  .center
    height 100%
    display flex
    align-items center
    justify-content center
    margin-top -20px
    .text
      z-index 10
    .datetime
      font-family 'Lato', sans-serif
      font-weight 100
      text-align center
      font-size 1rem
      margin-bottom 1rem
    .content
      text-align center
      font-size 1.5rem
      margin-left 2rem
      margin-right 2rem
      line-height 2rem
      font-weight 100
  .bottom
    position fixed
    height 10%
    width 100%
    bottom 0
    div.back-to-main
      position absolute
      width 100%
      bottom 80px
      button.move-last
        top 50px
      button.move-origin
        top 0px
      button.back-to-main
        animation show-ani .7s 1.2s forwards
        transition top 2s
        opacity 0
        position relative
        display block
        padding 0
        background none
        border none
        margin 0 auto
        width 140px
        height 50px
        font-family 'Lato', sans-serif
        font-size 1rem
        font-weight 700
        div.line
          margin 0 auto
          height 2px
          width 130px
        svg
          position relative
          left 15px
          width 7px
          top 2px
    .bottom-main
      position absolute
      bottom 30px
      width 100%
      display flex
      justify-content space-between
      opacity 0
      animation show-ani .7s .2s forwards
      button.timeline
        position relative
        left 20px
        width 150px
        height 30px
        padding 0px
        border none
        background none
        span
          font-family 'Lato', sans-serif
          font-size 1rem
          font-weight 700
          position absolute
          bottom 0px
          left 0px
        svg
          position relative
          right 2px
          width 7px
          top 9px
      button.epilog
        position relative
        right 20px
        width 100px
        height 30px
        border none
        background none
        span
          font-family 'Lato', sans-serif
          font-size 1rem
          font-weight 700
          position absolute
          bottom 0px
          right 0px
        svg
          position absolute
          bottom 0px
          right 0px
          width 20px
          height 20px
    div.timeline
      position absolute
      bottom 40px
      width 100%
      animation show-ani .7s .2s forwards
      opacity 0
    .infomation
      width 100px
      position absolute
      bottom 30px
      right 20px
      .epilog-btn
        z-index 30
        background-color transparent
        border none
        width 40px
        height 40px
        float right
        position relative
        right 20px
        font-family 'Lato', sans-serif
        font-size 1rem
        font-weight 700
        svg
          position absolute
          bottom 0px
          right 0px
          width 20px
          height 20px
  .sky
    position absolute
    height 100%
    width 100%
    top 0px
    z-index -10
    & > div
      transition opacity 1s linear