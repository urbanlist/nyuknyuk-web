@keyframes move {
  0% {
    transform: translateX(0px);
  }
  100%{
    transform: translateX(1500px);
  }
}


@keyframes move1 {
  0% {
    transform: translateX(-500px);
  }
  50% {
    opacity: 0.5;
  }

  100%{
    transform: translateX(1000px);
  }
}

@keyframes move2 {
  0% {
    transform: translateX(100px);
  }

  100%{
    transform: translateX(1600px);
  }
}
@keyframes move3 {
  0% {
    transform: translateX(-500px);
  }

  100%{
    transform: translateX(1000px);
  }
}

.home
  width 100%
  height 100%
  background linear-gradient(to bottom,rgb(93, 104, 130) , rgb(237, 234, 227))
  .top
    display flex
    justify-content space-between
    .weather
      position relative
      top 20px
      left 20px
      font-size 1.5rem
      font-weight 100
      color #ffffff
    .place
      position relative
      top 20px
      right 20px
      font-size 1.5rem
      font-weight 100
      color #ffffff
  .center
    height 100%
    display flex
    align-items center
    justify-content center
    .datetime
      text-align center
      font-size 1rem
      color #ffffff
      margin-bottom 1rem
    .content
      text-align center
      font-size 1.5rem
      color #000000
      margin-left 2rem
      margin-right 2rem
      line-height 2rem
      font-weight 100
  .background
    position absolute
    height 100%
    width 100%
    top 0px
    img
      height 50px
      width 50px
      position relative
      animation move 20s linear infinite